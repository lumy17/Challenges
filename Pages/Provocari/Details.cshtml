@page
@model Challenges.Pages.Provocari.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="main--content">
    <div class="header--wrapper">
        <div class="header--title">
            <h2>@Model.Provocare.Nume</h2>
        </div>
    </div>
    <div class="card--container">
        <div class="card--wrapper">
<div class="container4 mt-5 other_pages">
    <br />
    <div class="ch-cont">
        <div class="imgss">
            <img src="@Model.Provocare.UrlImagine" class="img-fluid">
        </div>
        <div class="txtt align-self-center ">
            @{
                var sentences = Model.Provocare.Descriere.Split('.');
                for (var i = 0; i < sentences.Length; i += 2)
                {
                    var line = sentences[i].Trim();
                    if (i + 1 < sentences.Length)
                    {
                        line += ". " + sentences[i + 1].Trim();
                    }
                    <p>@line</p>
                }
            }
            <p><strong>Categorie:</strong> @Model.Provocare.Categorie</p>
            <p><strong>Durata:</strong> @Model.Provocare.Durata</p>
            <form method="post">
                <button type="submit" asp-route-id="@Model.Provocare.Id"
                        class="btn btn-primary">
                    Start Challenge
                </button>
            </form>
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
</div>
</div>
</div>