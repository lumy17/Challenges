@page
@model Challenges.WebApp.Pages.AppChallenges.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="main--content">
    <div class="header--wrapper">
        <div class="header--title">
            <h2>@Model.Challenge.Name</h2>
        </div>
    </div>
    <div class="card--container">
        <div class="card--wrapper">
<div class="container4 mt-5 other_pages">
    <br />
    <div class="ch-cont">
        <div class="imgss">
            <img src="@Model.Challenge.ImageUrl" class="img-fluid">
        </div>
        <div class="txtt align-self-center ">
            @{
                var sentences = Model.Challenge.Description.Split('.');
                for (var i = 0; i < sentences.Length; i += 2)
                {
                    var line = sentences[i].Trim();
                    if (i + 1 < sentences.Length)
                    {
                        line += ". " + sentences[i + 1].Trim();
                    }
                    <p>@line</p>
                }
            }
            <p><strong>Category:</strong> @Model.Challenge.Category</p>
            <p><strong>Duration:</strong> @Model.Challenge.Duration</p>
            <form method="post">
                <button type="submit" asp-route-id="@Model.Challenge.Id"
                        class="btn btn-primary">
                    Start Challenge
                </button>
            </form>
        </div>
    </div>
</div>
</div>
</div>
</div>