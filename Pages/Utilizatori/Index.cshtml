@page
@model Challenges.Pages.Utilizatori.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Utilizator[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utilizator[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utilizator[0].Prenume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Utilizator[0].NumarTelefon)
            </th>
            <th>
                Categorii de Interes
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Utilizator) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumarTelefon)
            </td>
                <td>
                    <ul>
                        @foreach (var categ in item.CategoriiUtilizatori)
                        {
                            <li>@categ.Categorie.Nume</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-page="/RealizariUtilizatori/Index" asp-route-id="@item.Id">
                        Realizari</a> 
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editare</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Stergere</a>
            </td>
        </tr>
}
    </tbody>
</table>
