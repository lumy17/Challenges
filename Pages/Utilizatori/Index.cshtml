@page
@model Challenges.WebApp.Pages.Utilizatori.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AppUser[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppUser[0].PhoneNumber)
            </th>
            <th>
                Categorii de Interes
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AppUser)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
                <td>
                    <ul>
                        @foreach (var category in item.UserCategories)
                        {
                            <li>@category.Category.Name</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-page="/RealizariUtilizatori/Index" asp-route-id="@item.Id">
                        Badges</a> 
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
