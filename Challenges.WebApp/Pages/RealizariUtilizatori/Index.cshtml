@page
@model Challenges.WebApp.Pages.RealizariUtilizatori.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="other_pages">
    <h1>Badge-urile Utilizatorilor</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RealizareUtilizator[0].Utilizator)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RealizareUtilizator[0].Realizare)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RealizareUtilizator[0].Data)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RealizareUtilizator)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Utilizator.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Realizare.NumeRealizare)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

